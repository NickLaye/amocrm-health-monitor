# amoCRM OAuth 2.0 Configuration
# Получите учетные данные в настройках интеграции amoCRM
AMOCRM_DOMAIN=your-domain.amocrm.ru
AMOCRM_CLIENT_ID=your_client_id_here
AMOCRM_CLIENT_SECRET=your_client_secret_here
AMOCRM_REDIRECT_URI=https://your-domain.com/oauth/callback

# amoCRM Tokens
# После первой авторизации токены будут автоматически сохраняться в data/tokens.json
AMOCRM_ACCESS_TOKEN=initial_access_token_here
AMOCRM_REFRESH_TOKEN=initial_refresh_token_here

# Mattermost Webhook Configuration
MATTERMOST_WEBHOOK_URL=https://your-mattermost-server.com/hooks/your_webhook_id

# Mattermost Mentions (опционально)
# Пользователи, которые будут упомянуты в уведомлениях
MATTERMOST_MENTIONS=@user1 @user2

# API Security
# Генерация: openssl rand -hex 32
# Опционально, но рекомендуется для production
API_SECRET=

# Monitoring Configuration
# Интервал между проверками (в миллисекундах)
CHECK_INTERVAL=30000

# Timeout для определения падения сервиса (в миллисекундах)
TIMEOUT_THRESHOLD=10000

# Server Configuration
PORT=3001
NODE_ENV=development

# Logging
LOG_LEVEL=info
