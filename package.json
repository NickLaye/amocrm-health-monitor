{
  "name": "amocrm-health-dashboard",
  "version": "1.0.0",
  "description": "Real-time amoCRM health monitoring dashboard",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "keywords": ["amocrm", "monitoring", "health-check", "dashboard"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.2",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "node-cron": "^3.0.3",
    "luxon": "^3.4.4",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/**/__tests__/**",
      "!server/index.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}

