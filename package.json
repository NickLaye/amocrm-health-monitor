{
  "name": "amocrm-health-dashboard",
  "version": "1.0.0",
  "description": "Real-time amoCRM health monitoring dashboard",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "echo 'Backend linting: OK (ESLint configured for frontend only)'",
    "migrate": "node server/migrate.js up",
    "migrate:status": "node server/migrate.js status",
    "migrate:rollback": "node server/migrate.js down",
    "migrate:create": "node server/migrate.js create",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:clean": "docker-compose -f docker-compose.dev.yml down -v"
  },
  "keywords": [
    "amocrm",
    "monitoring",
    "health-check",
    "dashboard"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "axios-retry": "^4.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "luxon": "^3.4.4",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.11",
    "prom-client": "^15.1.0",
    "sqlite3": "^5.1.6",
    "swagger-ui-express": "^5.0.1",
    "umzug": "^3.8.2",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  }
}